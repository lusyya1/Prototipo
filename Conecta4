#include <iostream>
#include <vector>
#include <string>
#include <limits> 

using namespace std;

// Tamaño del tablero 
const int FILAS = 6;
const int COLUMNAS = 7;
// Nombres de los jugadores
const string P1 = "P1";
const string P2 = "P2";

// Esto se convertira en el tablero. Es una lista de listas (vector de vectores)
vector<vector<string>> tablero(FILAS, vector<string>(COLUMNAS)); 
// Variable para saber de quién es el turno
string jugador_actual = P1; 

// ---------------------------------------------------------------------

// Función para poner el tablero vacío
void inicializarTablero() {
    // Todas las filas
    for (int f = 0; f < FILAS; ++f) {
        // Todas las columnas
        for (int c = 0; c < COLUMNAS; ++c) {
            // Espacios para crear una casilla vacía
            tablero[f][c] = "  "; 
        }
    }
    // Siempre empieza el Jugador P1
    jugador_actual = P1; 
}

    return 0;
}